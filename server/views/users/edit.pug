extends ../layouts/application.pug

block header
  = t('views.users.edit.editUser')

block content
  +formFor()(action=`/users/${user.id}` method="post")
    +input(user, 'firstName', errors, t('views.users.edit.firstName'))(type="text")
    +input(user, 'lastName', errors, t('views.users.edit.lastName'))(type="text")
    +input(user, 'email', errors, t('views.users.edit.email'))(type="email")
    +input({}, 'password', errors, t('views.users.edit.password'))(type="password")
    input(name="_method" type="hidden" value="patch")
    +submit()(value=t('views.users.edit.editButton'))